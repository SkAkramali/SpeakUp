# API Configuration
VITE_API_URL=http://localhost:3000/api/v1

# File Upload
VITE_MAX_FILE_SIZE=5242880
# 5MB in bytes (5 * 1024 * 1024)

# Allowed file types
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Feature Flags (optional)
VITE_ENABLE_FEEDBACK=true
VITE_ENABLE_SUGGESTIONS=true
VITE_ENABLE_RATINGS=true

# App Info
VITE_APP_NAME=SpeakUp
VITE_APP_VERSION=1.0.0
